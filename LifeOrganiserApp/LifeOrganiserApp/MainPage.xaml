                                <Image.Source>
                                    <BitmapImage x:Name="urlImage6Sports"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="url6Sports" PointerPressed="Image_PointerPressed6Sports" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
