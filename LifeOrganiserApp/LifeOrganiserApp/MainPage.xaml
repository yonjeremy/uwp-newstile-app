                            </Image.Source>
                        </Image>
                        <TextBlock x:Name="url6Business" PointerPressed="Image_PointerPressed6Business" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
